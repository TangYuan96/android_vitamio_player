<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4aedf0"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            android:id="@+id/toolbar2" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:text="健康讲座"
                android:id="@+id/toolbar_title"/>
        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d9d9d9"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottombar_home"
            android:descendantFocusability= "blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topbar_lecture_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="讲座视频"
                android:textColor="@drawable/bottom_lecture_deal"
                android:textSize = "16sp"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottombar_news"
            android:descendantFocusability= "blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topbar_lecture_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="讲座音频"
                android:textColor="@drawable/bottom_lecture_deal"
                android:textSize = "16sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottombar_shop"
            android:descendantFocusability= "blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/topbar_lecture_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="健康美文"
                android:textColor="@drawable/bottom_lecture_deal"
                android:textSize = "16sp"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E9E9E9"
        android:layout_weight="1">

    </FrameLayout>



</LinearLayout>